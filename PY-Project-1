import random

# Snake Water Gun or Rock Paper Scissors
def gameWin(comp, user):
    # If two values are equal, declare a tie!
    if comp == user:
        return None

    # Check for all possibilities when computer chose s
    elif comp == 's':
        if user=='w':
            return False
        elif user=='g':
            return True
    
    # Check for all possibilities when computer chose w
    elif comp == 'w':
        if user=='g':
            return False
        elif user=='s':
            return True
    
    # Check for all possibilities when computer chose g
    elif comp == 'g':
        if user=='s':
            return False
        elif user=='w':
            return True

print("Comp Turn: Snake(s) Water(w) or Gun(g)?")
randNo = random.randint(1, 3) 
if randNo == 1:
    comp = 's'
elif randNo == 2:
    comp = 'w'
elif randNo == 3:
    comp = 'g'

user = input("user's Turn: Snake(s) Water(w) or Gun(g)?")
a = gameWin(comp, user)

print(f"Computer chose {comp}")
print(f"user chose {user}")

if a == None:
    print("The game is a tie!")
elif a:
    print("Wow, you won!")
else:
    print("Alas, you Lost!")
